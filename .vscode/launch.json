    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: repo helper - get groups",
            "type": "python",
            "request": "launch",
            "program": "${workspaceRoot}/helpers/repo.py",
            "console": "integratedTerminal",
            "args": [
                "-r",
                "${workspaceRoot}/../.repo",
                "-g"
            ]
        },
        {
            "name": "Python: repo helper - get url",
            "type": "python",
            "request": "launch",
            "program": "${workspaceRoot}/helpers/repo.py",
            "console": "integratedTerminal",
            "args": [
                "-r",
                "${workspaceRoot}/../.repo",
                "-u"
            ]
        },
        {
            "name": "Python: repo helper - get manifest",
            "type": "python",
            "request": "launch",
            "program": "${workspaceRoot}/helpers/repo.py",
            "console": "integratedTerminal",
            "args": [
                "-r",
                "${workspaceRoot}/../.repo",
                "-m"
            ]
        }
    ]
}